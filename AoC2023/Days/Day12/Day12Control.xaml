<UserControl x:Class="AoC2023.Days.Day12.Day12Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBox Text="{Binding ArrangementSum, Mode=OneWay}" />
            <TextBox Text="{Binding UnfoldedArrangementSum, Mode=OneWay}" />
        </StackPanel>

        <DataGrid Grid.Column="1" ItemsSource="{Binding Rows}">
            
        </DataGrid>
            
        
    </Grid>
</UserControl>
